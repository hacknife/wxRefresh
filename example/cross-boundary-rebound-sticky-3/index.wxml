 <refresh refresh-enable="{{false}}" load-enable="{{false}}" cross-boundary-rebound-height="140">
 	<swiper slot="interval" autoplay interval="2000" duration="1000" circular style="width:750rpx;height:250rpx;">
 		<swiper-item style="width:100%;height:100%;background:yellow;"></swiper-item>
 		<swiper-item style="width:100%;height:100%;background:#245;"></swiper-item>
 	</swiper>
 	<view slot="sticky" style="width:750rpx;height:100rpx;background:#941;" />
 	<swiper slot="interval_2" autoplay interval="2000" duration="1000" circular style="width:750rpx;height:250rpx;">
 		<swiper-item style="width:100%;height:100%;background:#526;"></swiper-item>
 		<swiper-item style="width:100%;height:100%;background:#123;"></swiper-item>
 	</swiper>
 	<view slot="sticky_2" style="width:750rpx;height:100rpx;background:#329;"></view>

 	<swiper slot="interval_3" autoplay interval="2000" duration="1000" circular style="width:750rpx;height:250rpx;">
 		<swiper-item style="width:100%;height:100%;background:#320;"></swiper-item>
 		<swiper-item style="width:100%;height:100%;background:#216;"></swiper-item>
 	</swiper>
 	<view slot="sticky_3" style="width:750rpx;height:100rpx;background:#560;"></view>
 	<view slot="content" class="content">
 		<view class="book" wx:for="{{articles}}">
 			<image class="book-cover" src="{{item.cover}}" />
 			<view class="horizontal">
 				<view class="book-title">{{item.title}}</view>
 				<view class="book-description">{{item.description}}</view>
 			</view>
 		</view>
 	</view>
 </refresh>