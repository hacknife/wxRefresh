.loading-box {
  width: auto;
  text-align: center;
}

.loading-box>view {
  display: inline-block;
}

.loading-rotate-cube {
  background: #1ab394;
  -webkit-animation: rotate-cube 1s ease-out infinite;
  animation: rotate-cube 1s ease-out infinite;
}

@-webkit-keyframes rotate-cube {
  0% {
    transform: rotateX(180deg);
  }

  50% {
    transform: rotateZ(180deg);
  }

  100% {
    transform: rotateY(180deg);
  }
}

@keyframes rotate-cube {
  0% {
    transform: rotateX(180deg);
  }

  50% {
    transform: rotateZ(180deg);
  }

  100% {
    transform: rotateY(180deg);
  }
}