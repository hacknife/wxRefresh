 <movable-area class="__movable_area">

 	<movable-view id="__movable_view" class="__movable_view" disabled="{{ refresh_status >= 3 || load_status >= 3 }}" direction="vertical" bind:change="onMovableChange" bind:touchend="onMovableTouchEnd" out-of-bounds="true" direction="vertical" style="height:calc(100vh + {{2 * refresher_height}}px + {{2 * footer_height}}px);" y="{{movable_y}}px" animation="{{animation}}">
 		<scroll-view id="__scroll_view" class="__scroll_view" scroll-y="{{( (refresh_status == 1 && load_status == 1) || ( refresh_status == 1 && over_page && load_status > 1 ) )? 'true' : ''}}" bindscroll="onScrollChanged" scroll-top="{{scroll_distance}}" bindscrolltolower="onScrollBottom" bindscrolltoupper="onScrollTop" lower-threshold="{{80}}rpx" scroll-with-animation="{{true}}">
 			<view style="height:{{top_size}}rpx" />
 			<view id="__refresher_space" style="width:100%;height:{{cross_boundary_rebound_height != 0 ?  2 * refresher_height+ 'px' : refresher_height +'px' }};" />
 			<view id="__refresher" class="__wrapper">
 				<slot name="refresher"></slot>
 			</view>
 			<view id="__header" class="__wrapper">
 				<slot name="header"></slot>
 			</view>
 			<view style="height:{{pin_height==0? 'auto' : pin_height+'px'}};">
 				<view wx:if="{{!pin}}" id="__pin" class="__wrapper">
 					<slot name="pin"></slot>
 				</view>
 			</view>
 			<view id="__header_2" class="__wrapper">
 				<slot name="header_2"></slot>
 			</view>
 			<view style="height:{{pin_height_2==0? 'auto' : pin_height_2 +'px'}};">
 				<view wx:if="{{!pin_2}}" id="__pin_2" class="__wrapper">
 					<slot name="pin_2"></slot>
 				</view>
 			</view>
 			<view id="__content" class="__vertical">
 				<slot name="content"></slot>
 			</view>
 			<view id="__content_empty" wx:if="{{( space_height < empty_height || empty_height ==0) && content_height == 0 }}" class="__center" style="width:100%;">
 				<slot name="empty" />
 			</view>
 			<view id="__content_space" wx:if="{{!over_page}}" class="__center" style="width:100%;height:{{space_height}}px;background:{{space_color}}">
 				<block wx:if="{{space_height >= empty_height && content_height == 0 }}" class="__wrapper" style="opacity:{{empty_height==0? 0:1}};">
 					<slot name="empty" />
 				</block>
 			</view>

 			<view id="__footer" class="__wrapper">
 				<slot name="footer"></slot>
 			</view>
 			<view id="__footer_space" style="width:100%;height:{{cross_boundary_rebound_height != 0 ?  2 * footer_height+ 'px' : footer_height +'px' }};" />
 			<view id="__over_page_footer_space" wx:if="{{over_page && cross_boundary_rebound_height == 0 && load_enable }}" style="width:100%;height:{{over_page_footer_height}}px;" />
 			<view style="height:{{bottom_size}}rpx" />
 		</scroll-view>
 	</movable-view>
 	<view id="__pin_wrapper" class="__pin_wrapper" style="margin-top:{{top_size}}rpx;">
 		<slot wx:if="{{pin}}" name="pin"></slot>
 		<slot wx:if="{{pin_2}}" name="pin_2"></slot>
 	</view>
 </movable-area>